{
  "name": "gavel",
  "version": "0.1.0",
  "description": "Local AI Code Review Assistant",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@types/prismjs": "^1.26.5",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-diff-view": "^3.3.2",
    "react-dom": "^18.3.1",
    "refractor": "^5.0.0",
    "unidiff": "^1.0.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.gavel.app",
    "productName": "Gavel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "personas/**/*"
    ],
    "extraResources": [
      {
        "from": "personas",
        "to": "personas"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "win": {
      "target": "nsis"
    }
  }
}
